<% include partials/header %>
      <!-- main content div -->

          <!--1) landing area -->
          <div id="landing-area" class="d-flex flex-column vh-100 w-75">
            <div class="container m-auto">
              <h1 class="mb-2">How are you? My name's Louie. </h1>
              <p class="mb-4">I'm a web developer currently based out of Colorado Springs, Colorado. I specialize in building custom websites for small and growing businesses. I'd love to talk with you
              about your web presence needs, so give me a call or email me today!</p>
              <button class="btn btn-danger btn-lg mt-4" type="button" name="button">MY WORK</button>
            </div>
          </div>
          <hr class="clearfix w-75">
          <!--2) project carousel -->
          <div id="project-carousel" class="justify-content-center w-50 m-5">
            <h1 class="mb-5">Projects</h1>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner container">
                <% projects.forEach((project, index) => { %>
                  <% if (index === 0) { %>
                    <div class="carousel-item active">
                      <img class="d-block w-75 mx-auto" src="<%= project.image %>" alt="<%= project.title %>">
                      <h5 class="card-title"><%= project.title %></h5>
                      <a href="/projects/<%= project._id %>" class="btn btn-danger btn-lg mt-2">Go to <%= project.title %></a>
                    </div>
                  <% } else { %>
                    <div class="carousel-item">
                      <img class="d-block w-75 mx-auto" src="<%= project.image %>" alt="<%= project.title %>">
                      <h5 class="card-title"><%= project.title %></h5>
                      <a href="/projects/<%= project._id %>" class="btn btn-danger btn-lg mt-2">Go to <%= project.title %></a>
                    </div>
                  <% } %>
                <% }); %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <hr class="clearfix w-75">
          <!--3) skills area  -->
          <div class="skills d-flex clearfix w-75 m-5 flex-column">
            <h1 class="mb-5">Skills</h1>
            <div class="skill-gallery-wrapper mt-4 d-flex flex-row flex-wrap mb-5">
              <% skills.forEach((skill) => { %>
                <div class="card col-lg-3 my-2 align-items-center border-0">
                  <img src="/icons/<%= skill.icon %>" class="card-img-top w-50" alt="<%= skill.title %> Logo">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= skill.title %></h5>
                    <p class="card-text"><%= skill.text %></p>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
<% include partials/footer %>
